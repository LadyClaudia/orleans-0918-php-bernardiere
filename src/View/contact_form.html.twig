{% block content %}





<section id="formulaireback">
    <div class="container pt-5 pb-5 backcontainer">
        <form action="contact" method="post" target="">
        <div class="row">
            <div class="col-xl-12">
                <form>
                    <div class="form-group row">
                        <label for="name" class="col-xl-1 col-form-label">Nom:</label>
                        <div class="col-xl-11">
                            <input type="text" class="form-control" id="name" name="name" placeholder="nom"
                                   value="{{ data.name ?? '' }}">
                            {% if errors.nameError %}
                                <div class="alert text-danger" role="alert">
                                    {{ errors.nameError }}
                                </div>
                            {% endif %}

                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="firstname" class="col-xl-1 col-form-label">Prénom:</label>
                        <div class="col-xl-11">
                            <input type="text" class="form-control" id="firstname" name="firstname" placeholder="prénom"
                                   value="{{ data.firstname ?? '' }}">
                            {% if errors.firstnameError %}
                                <div class="alert text-danger" role="alert">
                                    {{ errors.firstnameError }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="mail" class="col-xl-1 col-form-label">Mail:</label>
                        <div class="col-xl-11">
                            <input type="email" class="form-control" id="mail" name="mail" placeholder="nom@exemple.fr"
                                   value="{{ data.mail ?? '' }}">
                            {% if errors.mailError %}
                                <div class="alert text-danger" role="alert">
                                    {{ errors.mailError }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="adress" class="col-xl-1 col-form-label">Adresse:</label>
                        <div class="col-xl-11">
                            <input type="text" class="form-control" id="adress" name="adress" placeholder="adresse"
                                   value="{{ data.adress ?? '' }}">
                            {% if errors.adressError %}
                                <div class="alert text-danger" role="alert">
                                    {{ errors.adressError }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="zipcode" class="col-xl-1 col-form-label">Code postal:</label>
                        <div class="col-xl-11">
                            <input type="text" class="form-control" id="zipcode" name="zipcode"
                                   placeholder="code postal" value="{{ data.zipcode ?? '' }}">
                            {% if errors.zipcodeError %}
                                <div class="alert text-danger" role="alert">
                                    {{ errors.zipcodeError }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="objet" class="col-xl-1 col-form-label">Objet:</label>
                        <div class="col-xl-11">
                            <select class="form-control" name="object" id="object">
                                <option disabled="true" selected>Information sur la cueillette</option>
                                <option>Information sur la ferme</option>
                                <option>Commande de paniers personnalisés</option>
                                <option>Reservations</option>
                                <option>Autre</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="message" class="col-xl-1 col-form-label">Message:</label>
                        <div class="col-xl-11">
                            <textarea class="form-control" id="message" name="message"
                                      rows="3">{{ data.message ?? '' }}</textarea>
                            {% if errors.messageError %}
                                <div class="alert text-danger" role="alert">
                                    {{ errors.messageError }}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Envoyer</button>
                </form>
            </div>
        </div>
    </div>
</section>


    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
            integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
            integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
            crossorigin="anonymous"></script>



{% endblock %}